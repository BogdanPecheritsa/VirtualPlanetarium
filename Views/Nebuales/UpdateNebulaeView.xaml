<Window x:Class="VirtualPlanetarium.Views.Nebulaes.UpdateNebulaeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Nebulae" SizeToContent="Height" Width="300" ResizeMode="NoResize">
    <StackPanel Margin="12,6">
        <TextBlock Text="Nebulae Name" Margin="0,10,0,0"/>
        <TextBox x:Name="NebulaeNameTextBox" />

        <TextBlock Text="Nebulae Type" Margin="0,10,0,0"/>
        <TextBox x:Name="NebulaeTypeTextBox" />

        <TextBlock Text="Size" Margin="0,10,0,0"/>
        <TextBox x:Name="SizeTextBox" />

        <TextBlock Text="Composition" Margin="0,10,0,0"/>
        <TextBox x:Name="CompositionTextBox" />

        <TextBlock Text="Brightness" Margin="0,10,0,0"/>
        <TextBox x:Name="BrightnessTextBox" />

        <Button Content="Update" Margin="0,20,0,0" Click="SaveButton_Click"/>
    </StackPanel>
</Window>